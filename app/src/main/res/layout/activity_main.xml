<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alecksjohanssen.todoapp.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvContents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick=""/>

    <EditText
        android:layout_width="141dp"
        android:layout_height="60dp"
        android:id="@+id/tdEditText"
        android:layout_alignParentStart="true"
        android:hint="@string/etTodo"
        android:textSize="17sp"
        android:layout_alignBottom="@+id/rvContents"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/tdAddItems"
        android:layout_toStartOf="@+id/tdAddItems" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/Add"
        android:id="@+id/tdAddItems"
        android:onClick="btnAddItem"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_weight="0.32"
        android:layout_alignParentRight="true" />




</RelativeLayout>
